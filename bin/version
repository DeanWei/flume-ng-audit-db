# Reference: http://stackoverflow.com/questions/59895/can-a-bash-script-tell-what-directory-its-stored-in
SOURCE="${BASH_SOURCE[0]}"
while [ -h "$SOURCE" ]; do
  DIR="$( cd -P "$( dirname "$SOURCE" )" && pwd )"
  SOURCE="$(readlink "$SOURCE")"
  [[ $SOURCE != /* ]] && SOURCE="$DIR/$SOURCE"
done
SCRIPT_DIR="$( cd -P "$( dirname "$SOURCE" )" && pwd )"

HOME=$SCRIPT_DIR/..

echo RPM version:
echo rpm_version

echo

echo flume-ng-customizations-*.jar info:
unzip -q -c $HOME/lib/flume-ng-customizations-*.jar \
	META-INF/maven/flume-ng-customizations/flume-ng-customizations/pom.properties