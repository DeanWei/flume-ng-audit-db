# Enviorenment variables for configuration
# 
# FORCE_JAVAC = true if you do not want to use Maven (default Maven is used)
# JAVA_BIN_PATH = path to java bin (default: /usr/bin/)

# Reference: http://stackoverflow.com/questions/59895/can-a-bash-script-tell-what-directory-its-stored-in
SOURCE="${BASH_SOURCE[0]}"
while [ -h "$SOURCE" ]; do
  DIR="$( cd -P "$( dirname "$SOURCE" )" && pwd )"
  SOURCE="$(readlink "$SOURCE")"
  [[ $SOURCE != /* ]] && SOURCE="$DIR/$SOURCE"
done
SCRIPT_DIR="$( cd -P "$( dirname "$SOURCE" )" && pwd )"

HOME=$SCRIPT_DIR/..

if `command -v "mvn" &> /dev/null` && ! [ "$FORCE_JAVAC" == "true" ] ;
then
	mvn install:install-file \
		-Dfile=$HOME/lib/elasticsearch-sink2-assembly-1.0.jar \
		-DgroupId=com.github.lucidfrontier45.ElasticsearchSink2 \
		-DartifactId=elasticsearch-sink2 \
		-Dversion=1.0 \
		-Dpackaging=jar

	mvn -f $HOME/pom.xml install
else
	: ${JAVA_BIN_PATH:="/usr/bin/"}
	
	$JAVA_BIN_PATH/javac \
		-cp /usr/lib/aimon-flume-ng/lib/*:$HOME/lib/elasticsearch-sink2-assembly-1.0.jar \
		$HOME/src/main/java/ch/cern/db/flume/*.java \
		$HOME/src/main/java/ch/cern/db/flume/interceptor/*.java \
		$HOME/src/main/java/ch/cern/db/flume/sink/elasticsearch/serializer/*.java \
		$HOME/src/main/java/ch/cern/db/flume/source/*.java \
		$HOME/src/main/java/ch/cern/db/flume/source/reader/*.java \
		$HOME/src/main/java/ch/cern/db/flume/source/deserializer/*.java \
		$HOME/src/main/java/ch/cern/db/utils/*.java
	
	mkdir -p $HOME/target
	
	$JAVA_BIN_PATH/jar cf $HOME/target/flume-ng-customizations.jar -C $HOME/src/main/java/ .
fi

